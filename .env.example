###############################################
# Labyrinth Explorer Environment Variables
# Copy this file to .env and fill in the values
# (Never commit your real secrets.)
###############################################

# MongoDB connection (Atlas or other). Example:
# MONGODB_URI=mongodb+srv://user:pass@cluster.example.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=
MONGODB_DB=labyrinth
MONGODB_COLLECTION=player_saves
MONGODB_LEADERBOARD_COLLECTION=leaderboard_winners

# Flask / server basics
FLASK_ENV=production
LE_ENGINE_DEBUG=0
CORS_ALLOWED_ORIGINS=*
FORCE_SECURE_COOKIES=1
SECRET_KEY=

# Optional Socket.IO scale-out (Redis). Leave blank if not used.
SOCKETIO_MESSAGE_QUEUE=

# --- Review submission (GitHub) ---
# Personal access token with necessary repo contents write permission.
# For same repo commits, a repo-scoped classic token or fine-grained token with
# contents:write is enough.
GITHUB_TOKEN=

# Repository to write review files to (owner/repo)
GITHUB_REPO=ShadowPrince001/Labyrinth_Explorer

# Folder inside repo for review text files (default 'reviews').
GITHUB_REVIEWS_PATH=reviews

# Branch to commit to (default empty uses repo default). Usually 'main'.
GITHUB_REVIEWS_BRANCH=main

# If running locally and you want to test review submission WITHOUT pushing,
# leave GITHUB_TOKEN blank; the feature will raise a clear error instead of committing.
